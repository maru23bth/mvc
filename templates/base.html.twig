        {% endblock %}
    </head>
    <body>
        <header>
            <nav>
                <ul>
                    <li><a href="{{ path('index') }}">Home</a></li>
                    <li><a href="{{ path('report') }}">Report</a></li>
                    <li><a href="{{ path('lucky_number') }}">Lucky number</a></li>
                    <li><a href="{{ path('card/index') }}">Card</a></li>
                    <li><a href="{{ path('game/index') }}">Game</a></li>
                    <li style="float: right;"><a href="{{ path('about') }}">About</a></li>
                </ul>
            </nav>            
        </header>
        <main>{% block main %}{% endblock %}</main>
        <footer>
            {% block footer %}Standard footer{% endblock %}
        </footer>
    </body>
</html>
